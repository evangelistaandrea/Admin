<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".View_Admin"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rectangle_container"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_notes_title">

        <TextView
            android:id="@+id/view_tvtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/noto_sans"
            android:text="TITLE"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/thumbs_up"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="130dp"
            android:layout_toRightOf="@+id/view_tvtitle"
            android:background="@drawable/thumbs_up" />

        <View
            android:id="@+id/thumbs_down"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_toRightOf="@+id/thumbs_up"
            android:background="@drawable/thumbs_down" />

    </RelativeLayout>

    <TextView
        android:id="@+id/view_tvcontents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="10dp"
        android:text="Contents"
        android:paddingStart="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/noto_sans"
        android:background="@drawable/bg_notes_title"/>



</LinearLayout>
